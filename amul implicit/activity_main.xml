<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
    >

  <TextView
      android:id="@+id/title"
      android:layout_width="match_parent"
      android:layout_height="80dp"
      android:text="PRODUCTS"
      android:gravity="center"
      android:textSize="40dp"
      android:fontFamily="serif-monospace"
      android:textStyle="bold"

      />

  <TextView
      android:id="@+id/t1"
      android:layout_width="180dp"
      android:layout_height="80dp"
      android:text="PROTEIN BUTTERMILK"
      android:layout_below="@+id/i1"
      android:textSize="20dp"
      android:fontFamily="sans-serif-medium"
      android:textStyle="bold"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="10dp"

      />

  <TextView
      android:id="@+id/t2"
      android:layout_width="180dp"
      android:layout_height="80dp"
      android:text="ICE CREAM"
      android:layout_below="@+id/i1"
      android:textSize="20dp"
      android:fontFamily="sans-serif-medium"
      android:textStyle="bold"
      android:layout_marginLeft="35dp"
      android:layout_marginTop="10dp"
      android:layout_toRightOf="@+id/t1"

      />




  <TextView
      android:id="@+id/t3"
      android:layout_width="180dp"
      android:layout_height="80dp"
      android:text="BUTTER"
      android:layout_below="@+id/i3"
      android:textSize="20dp"
      android:fontFamily="sans-serif-medium"
      android:textStyle="bold"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="10dp"

      />

  <TextView
      android:id="@+id/t4"
      android:layout_width="180dp"
      android:layout_height="80dp"
      android:text="CHEESE"
      android:layout_below="@+id/i4"
      android:textSize="20dp"
      android:fontFamily="sans-serif-medium"
      android:textStyle="bold"
      android:layout_marginLeft="35dp"
      android:layout_marginTop="10dp"
      android:layout_toRightOf="@+id/t3"

      />


<ImageView
    android:id="@+id/i1"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:src="@drawable/bm"
  android:layout_below="@+id/title"
    android:layout_marginTop="50dp"
    />

  <ImageView
      android:id="@+id/i2"
      android:layout_width="180dp"
      android:layout_height="200dp"
      android:src="@drawable/ice"
      android:layout_below="@+id/title"
      android:layout_marginTop="50dp"
      android:layout_toRightOf="@+id/i1"
      android:layout_marginLeft="3dp"
      />

  <ImageView

      android:id="@+id/i3"
      android:layout_width="200dp"
      android:layout_height="200dp"
      android:src="@drawable/butter"
      android:layout_below="@+id/i1"
      android:layout_marginTop="100dp"
      />

  <ImageView
      android:id="@+id/i4"
      android:layout_width="180dp"
      android:layout_height="200dp"
      android:src="@drawable/a"
      android:layout_below="@+id/i2"
      android:layout_marginTop="100dp"
      android:layout_toRightOf="@+id/i3"
      android:layout_marginLeft="3dp"
      />






</RelativeLayout>