<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:background="@drawable/bgg"
    >


    <TextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Food Zone Menu"
        android:gravity="center"
        android:textSize="33dp"
        android:layout_marginTop="55dp"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:textColor="@color/black"
    />
    <ImageView
        android:id="@+id/i1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/burger"
        android:layout_below="@+id/txt1"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="40dp"

/>
    <ImageView
        android:id="@+id/i2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/potato"
        android:layout_below="@+id/i1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        />
    <ImageView
        android:id="@+id/i3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/pizza"
        android:layout_below="@+id/i2"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"

        />
    <ImageView
        android:id="@+id/i4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/popcorn"
        android:layout_below="@+id/i3"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        />

    <CheckBox
        android:id="@+id/txt2"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="BURGER \n rs : 90"
        android:fontFamily="sans-serif-condensed"
       android:layout_below="@+id/txt1"
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/i1"
        android:layout_marginTop="85dp"
        android:layout_marginLeft="20dp"
        />
    <CheckBox
        android:id="@+id/txt3"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="FRENCH FRIES \n rs : 60"
        android:fontFamily="sans-serif-condensed"
        android:layout_below="@+id/txt2"
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/i1"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="20dp"
        />
    <CheckBox
        android:id="@+id/txt4"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="PIZZA \n rs : 170"
        android:fontFamily="sans-serif-condensed"
        android:layout_below="@+id/txt3"
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/i1"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp"
        />
    <CheckBox
        android:id="@+id/txt5"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="POPCORN \n rs : 50"
        android:fontFamily="sans-serif-condensed"
        android:layout_below="@+id/txt4"
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/i1"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        />

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="ORDER"
        android:layout_below="@+id/txt5"
        android:layout_centerInParent="true"
        android:layout_marginTop="60dp"

        />

    <ImageView
        android:id="@+id/call"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/call"
        android:layout_toLeftOf="@id/btn2"
        android:layout_below="@id/i4"
        android:layout_marginTop="40dp"
/>
    <ImageView
        android:id="@+id/fb"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/fb"
        android:layout_toRightOf="@id/call"
        android:layout_below="@id/i4"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="85dp"


        />




</RelativeLayout>